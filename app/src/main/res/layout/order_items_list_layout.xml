<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/recbound"
    android:layout_margin="2dp"
    android:padding="5dp"
    android:layout_height="wrap_content">



    <TextView
        android:text="Topping and Extras :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewToppings"
        android:textColor="#607D8B"
        android:textSize="12sp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/textViewSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/textViewOffer"
        android:layout_toStartOf="@+id/textViewOffer" />

    <TextView
        android:text="Buy 1 Get 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewOffer"
        android:textColor="#607D8B"
        android:textSize="12sp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/textViewPrice"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />



    <TextView
        android:text="Veggie Single"
        android:gravity="left"
        android:layout_width="320dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/textViewItemName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="Size"
        android:gravity="left"
        android:layout_below="@+id/textViewItemName"
        android:layout_width="320dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/textViewOffer"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="rs 56785"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPrice"
        android:textColor="#607D8B"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/textViewItemName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

</RelativeLayout>
